{
  "$schema": "../../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "BeamSPA",
  "version": "0.1.0",
  "identifier": "io.slqavevveveve.beamspa",
  "plugins": {
    "http": null
  },
  "build": {
    "frontendDist": "../frontend/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "cd ../frontend && npm run dev",
    "beforeBuildCommand": "cd ../frontend && npm run build -- --mode tauri"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Beam SPA",
        "label": "main",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' data: blob: http: https:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'; connect-src * ws: wss:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
